.button
  height 48px
  display inline-block
  vertical-align middle
  background-color #ff9b00
  border-radius 4px
  color #fff
  font-size 16px
  font-weight 400
  letter-spacing .2px
  line-height 48px
  padding 0 36px
  text-align center
  text-decoration none
  outline none
  border 0 none
  cursor pointer
  transition background-color .2s
  white-space nowrap
  &._long
    padding 0 18px
  &:hover
    color #fff
    background-color #F1850D
  +mediaMax($small)
    font-size 1.7rem
    line-height 4.8rem
    height 4.8rem
    padding 0 3.6rem
    &._long
      padding 0 1.8rem
