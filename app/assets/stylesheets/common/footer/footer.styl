.footer
  background #fff
  padding 20px 0 10px
  &__label
    color #9e9e9e
    font-size 13px
    font-weight 400
    letter-spacing .4px
    line-height 15px
    display block
    margin-bottom 15px

  &__wrap
    max-width 1312px
    width 100%
    box-sizing border-box
    margin auto
    padding 0 24px
  &__nav
    margin-bottom 25px
    +mediaMax($small)
      display flex
      flex-wrap wrap
    a
      & + a
        margin-left 20px

      color #5baed6
      font-size 13px
      font-weight 400
      letter-spacing .4px
      line-height 15px

      +mediaMax($small)
        display inline-block
        font-size 1rem
        line-height 1.6
        & + a
          margin-left 0
        margin 0 0 .5rem
        flex-grow 1
        width calc(100% * (1/2) - 10px - 1px)

  &__copy
    color #9e9e9e
    font-size 13px
    font-weight 400
    letter-spacing .2px
    line-height 1.154em
    margin 0
  &__tels
    margin-bottom 35px
    display inline-block
    +mediaMax($small)
      margin-bottom 4rem
    a
      display block
      color #616161
      font-size 21px
      font-weight 300
      line-height 1.524
      text-decoration none
      +mediaMax($small)
        font-size 2rem
  &__icon
    vertical-align top
    display inline-block
    margin-right 19px
    svg
      width 40px
      height 40px
    +mediaMax($small)
      margin-right 1rem
      svg
        width 3.2rem
        height 3.2rem