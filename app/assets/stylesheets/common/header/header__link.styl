.header__link
  color #fff
  font-size 13px
  font-weight 400
  letter-spacing .4px
  line-height 24px
  text-decoration none
  text-transform uppercase
  display inline-block
  vertical-align middle
  height 24px
  padding 0 15px
  border-radius 4px
  position relative
  &._active
    cursor default
    pointer-events none
    color #fff
    text-decoration none
    background hsla(0,0%,100%,.2)

  +mediaMax($small)
    text-align center
    display block
    width 100%
    height 3rem
    font-size 1.2rem
    line-height 2rem
    padding 0
    color #fff
    &._active
      pointer-events initial
      cursor pointer
      color #fff
      text-decoration none
      background transparent
