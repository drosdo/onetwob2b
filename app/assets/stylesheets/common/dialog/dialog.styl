.dialog
  background-color rgba(62,71,87,.8)
  display none
  position absolute
  z-index 80
  overflow hidden
  justify-content: center
  align-items: center
  top 0
  left 0
  width 100%
  height 100%
  &__title 
    color #9e9e9e
    font-size 24px
    font-weight 300
    line-height 32px
    text-align center
    margin-bottom 23px

  ._dialog-open &
    display flex

  &__popup
    background #fff
    min-width 360px
    max-width 80%
    max-height 80%
    position relative
    box-shadow 0 7px 8px -4px rgba(0,0,0,.2), 0 13px 19px 2px rgba(0,0,0,.14), 0 5px 24px 4px rgba(0,0,0,.12)
    flex-direction column
    +mediaMax($small)
      min-width auto
      max-width auto
      width 90%

  &__form
    width 100%

  &__fieldset
    padding 24px

  &__button
    cursor pointer
    display block
    width 100%
    height 48px
    background-color #ff9b00
    padding 4px 16px
    color #fff
    font-size 16px
    font-weight 400
    letter-spacing .2px
    line-height 40px
    text-align center
    text-decoration none
    outline none
    border 0 none
    white-space nowrap
    text-transform uppercase
    &:hover
      color: #fff;
      text-decoration: none;
      background-color: #ffaf33;


  &__close-button
    position absolute
    right -52px
    top 0
    margin 0
    height 40px
    min-width 0
    line-height 24px
    padding 8px
    width 40px
    border-radius 50%
    svg
      fill #fff
      width 24px
      height 24px

    +mediaMax($small)
      right 0
      svg
        fill #000
        width 2.4rem
        height 2.4rem