.screen
  padding 40px 0 50px
  background-color #fafafa
  box-sizing border-box
  +mediaMax($small)
    padding 4rem 0

  &__wrap
    max-width 1312px
    width 100%
    margin auto
    padding 0 24px
    text-align center
    box-sizing border-box
    +mediaMax($small)
      padding 0
  p
  &__text
    color #616161
    font-size 14px
    font-weight 400
    letter-spacing .2px
    line-height 20px
    margin 0
    +mediaMax($small)
      font-size 1.4rem
      line-height 2rem
      letter-spacing .02rem

  &__title
    color #424242
    font-size 20px
    font-weight 500
    letter-spacing .2px
    line-height 28px
    margin-bottom 14px
    +mediaMax($small)
      font-size 2rem
      line-height 2.8rem
      margin-bottom 1.4rem
