.easy-start
  &__content
    display flex
    justify-content center
    align-items center
    +mediaMax($small)
      display block
  &__item
    width 209px
    text-align left
    padding 0 20px
    +mediaMax($small)
      @extend .clearfix
      width 70%
      padding 0
      margin 0 auto 1rem
  &__icon
    margin-bottom 25px
    margin-right 10px
    float left
    svg
      width 44px
      height 44px