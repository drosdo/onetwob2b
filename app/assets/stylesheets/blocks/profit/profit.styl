.profit
  box-sizing border-box
  &__content
    display flex
    justify-content space-between
    align-content justify-items
    align-items justify-content
    flex-direction row
    flex-wrap wrap
    max-width 870px
    margin auto
    +mediaMax($small)
      display block

  &__item
    order 1
    flex 0 0 40%
    align-self auto
    margin-bottom 70px
    width 420px
    &:last-child
      margin-bottom 0
    +mediaMax($small)
      width auto
  &__title
    margin-bottom 7px

  &__icon
    float left
    width 97px
    text-align left
    +mediaMax($small)
      float none
      width 6.4
      margin-bottom 1rem
      display inline-block
    svg
      width 64px
      height 64px
      +mediaMax($small)
        width 6.4rem
        height 6.4rem
  &__list
    overflow hidden
    text-align left
    +mediaMax($small)
      text-align center
    li
      color #424242
      font-size 14px
      font-weight 400
      letter-spacing .2px
      line-height 24px
      padding-left 24px
      position relative

      +mediaMax($small)
        padding 0
        font-size 1.4rem
        line-height 2.4rem
        display flex
        flex-direction column
        justify-content center
        align-items center
        width 100%

    &-text
      display inline
      position relative
      +mediaMax($small)
        display block
        flex-shrink 0

    &-icon
      position absolute
      left -24px
      top -3px
      width 12px
      height 12px
      svg
        width 12px
        height 12px
      +mediaMax($small)
        left -2.4rem
        top .1rem
        width 1.8rem
        height 2.4rem
        svg
          width 1.2rem
          height 1.2rem
          overflow visible
