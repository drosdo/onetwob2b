.input
  &__text
    height 56px
    width 100%
    padding 16px 12px
    background-color #f5f5f5
    border 1px solid #f5f5f5
    border-radius 2px
    color #424242
    font-size 16px
    font-weight 400
    letter-spacing .2px
    line-height 1
    outline none
    transition background 300ms ease
    appearance none

    &._white
      background-color #fff
      border none
      border-bottom 1px solid #d4d6d9
      &:hover
      &:focus
        background-color #fff
        border none
        border-bottom 1px solid #d4d6d9
      ._invalid &
      ._wrong &
        border none
        border-bottom 1px solid #FF6B00
    ._small &
      text-align center
    &::-ms-clear
      display none
    ._placeholder-on &
      padding 20px 12px 0
    &:hover
      background-color #EEEEEE
      border 1px solid #EEEEEE
    &:focus
      background #fff
      border 1px solid #EEEEEE
    ._invalid &
    ._wrong &
      border 1px solid #FF6B00
      border-bottom-left-radius 0

    +mediaMax($small)
      height 5.6rem
      border-radius .2rem
      padding 1.6rem 1.2rem
      margin-bottom 1.2rem
      font-size 1.6rem
      letter-spacing .02rem
      ._placeholder-on &
        padding 2rem 1.2rem 0

  &__checkbox
    position absolute
    left 0
    top 0
    opacity 0


  &__select
    height 56px
    width 100%
    padding 16px 12px 0
    background-color #f5f5f5
    border 1px solid #f5f5f5
    border-radius 2px
    margin-bottom 12px
    color #424242
    font-size 16px
    font-weight 400
    letter-spacing .2px
    line-height 1
    outline none
    transition background 300ms ease
    appearance none
