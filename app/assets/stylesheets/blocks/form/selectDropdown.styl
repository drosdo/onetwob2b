.select-dropdown
  position relative
  width 100%
  &__result
    position absolute
    display none
    top 55px
    z-index 1300
    width 100%
    max-height 200px
    overflow auto
    border solid #d9d9d9
    border-radius 0 0 3px 3px
    border-width 1px
  &__checkbox
    opacity 0
    position absolute
    left 0
    top 0
    z-index 200
    width 100%
    height 56px
    cursor pointer

    &:checked ~
      .select-dropdown__toggle-box
        transform rotate(180deg)
      .select-dropdown__result
        display block

  &__toggle-box
    position absolute
    right 0
    top 0
    z-index 100
    width 56px
    height 56px
    transition all .3s

  &__triangle
    transform translate(24px, 25px)
    width 0
    height 0
    border-style solid
    border-width 6.9px 4px 0 4px
    border-color #9e9e9e transparent transparent transparent

  &__item
    margin 0
    cursor pointer
    border-radius 0




