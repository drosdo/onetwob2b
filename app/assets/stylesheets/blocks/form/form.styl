.form
  background linear-gradient(to right, rgba(122,167,191,1) 0%, rgba(108,145,188,1) 100%)
  form
    width 576px
    margin 0 auto
    +mediaMax($small)
      width 90%
  &__cols
    display flex
    &._2cols
      +mediaMax($small)
        display block
  &__col
    box-sizing border-box
    margin-right 10px
    &:last-child
      margin-right 0
    ._2cols &
      width 50%
      &._small-col
        width 40%
      &._big-col
        width 60%
      +mediaMax($small)
        width 100% !important
        margin 0
    ._4cols &
      width 25%
      +mediaMax($small)
        width 100%
        margin-right 1rem
        &:last-child
          margin-right 0

  &__field
    position relative
    margin-bottom 12px

  &__field-inline
    position relative
    display inline-block
    margin-right 10px

  &__label
    position relative
    display block
    margin 15px 0 17px
    color #fff
    font-size 20px
    font-weight 500
    letter-spacing .2px
    line-height 28px
    +mediaMax($small)
      font-size 2rem
      margin 1rem 0 1.7rem
      letter-spacing .02rem
      line-height 2.8rem
  &__label-small
    font-size 12px
    font-weight 200

  &__radio-input
    position absolute
    left 0
    top 0
    opacity 0
    & ~ label
      position relative
      padding-left 35px
      &:before
        content ''
        display block
        width 24px
        height 24px
        border-radius 50%
        position absolute
        left 0
        top 0
        background-color #e0e0e0
      &:after
        content ''
        display none
    &:checked ~ label
      position relative
      padding-left 35px
      &:before
        background-color #ffc901
      &:after
        content ''
        display block
        width 8px
        height 8px
        border-radius 50%
        background-color #424242
        position absolute
        left 8px
        top 8px

  &__placeholder
    color #9E9E9E
    font-size 16px
    font-weight 400
    letter-spacing .2px
    line-height 1
    position absolute
    left 12px
    top 22px
    transition all .2s
    ._small &
      font-size 13px

    +mediaMax($small)
      font-size 1.6rem
      letter-spacing .02rem
      left 1.2rem
      top 1.8rem

    ._placeholder-on &
      position absolute
      font-size 13px
      line-height 24px
      top 0

      +mediaMax($small)
        font-size 1.3rem
        line-height 2.4rem

  &__bottom
    margin-top 22px
    display flex
    flex-direction row
    flex-wrap nowrap
    justify-content space-between
    align-content center
    align-items center
    +mediaMax($small)
      display block
      margin-top 2.2rem

  &__bottom-item
    order 0
    flex 0 1 auto
    align-self auto
    +mediaMax($small)
      &._button
        margin-top 2rem
        text-align center

  &__message
    display none
    color #fff
    padding 6px 12px
    font-size 14px
    background #FF6B00
    +mediaMax($small)
      top 5.6rem
      padding .6rem 1.2rem
      font-size 1.4rem
    ._wrong &
    ._invalid &
      display inline-block

  &__link-right
    position absolute
    right 0
    top 8px
    color #fff
    font-size 14px
    cursor pointer
    +mediaMax($small)
      position relative
  &__extra
    opacity 0
    transition opacity 1s
    &._full
      opacity 1

  &__success
    text-align center
    margin 0 auto 40px

    +mediaMax($small)
      width 90%
  &__text
    color #fff
    font-size 16px
    font-weight 400
    letter-spacing .2px
    margin-bottom 20px
