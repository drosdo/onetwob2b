.numeric
  &__content
    display flex
    justify-content space-around
    align-items stretch
    flex-wrap wrap
    +mediaMax($small)
      flex-direction column
      align-items center
  &__item
    width 210px
    text-align center 
    order 0
    flex 0 1 auto
    align-self auto
    +mediaMax($small)
      width 21rem
      margin-bottom 5rem
      &:last-child
        margin-bottom 0
  &__num
    color #8dc3e0
    font-size 52px
    font-weight 300
    line-height 48px
    margin 0 0 3px
    +mediaMax($small)
      font-size 5.2rem
      line-height 4.8rem
      margin 0 0 .3rem
  &__things
    display block
    font-family Roboto, sans-serif
    font-size 21px
    letter-spacing -0.4px
    text-align center
    color rgb(141, 195, 224)
    margin-bottom 12px
  .controls
    +mediaMax($small)
      display none
