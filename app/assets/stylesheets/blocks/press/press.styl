.press
  &__label
    color #9e9e9e
    font-size 13px
    font-weight 400
    letter-spacing .4px
    line-height 15px
    display block
    margin 0 auto 15px
  
  &__links
    display flex
    justify-content space-around
    align-items center
    flex-wrap nowrap
    +mediaMax($small)
      //display block
      justify-content flex-start
      width 100%
      overflow-x auto
      white-space nowrap

  &__logo
    display block
    opacity .5
    &:hover
      opacity 1
    img
      width 50%

    +mediaMax($small)
      flex-shrink 0
      //display inline-block
      width 10rem
