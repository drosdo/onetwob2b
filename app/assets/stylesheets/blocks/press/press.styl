.press
  &__label
    color #9e9e9e
    font-size 13px
    font-weight 400
    letter-spacing .4px
    line-height 15px
    display block
    margin 0 auto 15px
    +mediaMax($small)
      font-size 1.3rem
      line-height 1.5rem

  
  &__links
    display flex
    justify-content space-around
    align-items center
    flex-wrap nowrap
    max-width 800px
    margin auto
    +mediaMax($small)
      //display block
      justify-content flex-start
      width 100%
      overflow-x auto
      white-space nowrap

  &__logo
    display block
    opacity .5
    &:hover
      opacity 1
    img
      width 100%

    &._vd
      width 119px
      +mediaMax($small)
        width 11.9rem
    &._vc
      width 76px
      +mediaMax($small)
        width 7.6rem
    &._sc
      width 119px
      +mediaMax($small)
        width 11.9rem
    &._bs
      width 124px
      +mediaMax($small)
        width 12.4rem
    &._rm
      width 50px
      +mediaMax($small)
        width 5rem

    +mediaMax($small)
      flex-shrink 0
      padding 0 1rem
      //display inline-block

